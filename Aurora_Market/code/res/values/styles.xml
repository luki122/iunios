<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 上传ProgressDialog的样式 -->
    <style name="upload_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="upload_progressDialog" parent="@style/upload_Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Note"></style>

    <style name="Note.VerticalLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">@dimen/new_note_menu_ver_line_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/new_note_menu_bar_vertical_sep_line</item>
    </style>

    <style name="new_note_menu_item">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="new_note_reminder_label_text">
        <item name="android:textColor">#979797</item>
        <item name="android:textSize">@dimen/new_note_reminder_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="record_activity_text">
        <item name="android:textColor">#bebebe</item>
        <item name="android:textSize">@dimen/textsize_17</item>
<!--         <item name="android:textStyle">bold</item> -->
    </style>

    <style name="play_activity_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#5f5f5f</item>
        <item name="android:textSize">@dimen/play_text_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="loading_head" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@anim/search_loading</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

     <style name="notification_install" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@anim/nofitication</item>
        <item name="android:layout_width">@dimen/notificaiont_install_progress_width</item>
        <item name="android:layout_height">@dimen/padding_3</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <style name="myRatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstart_small</item>
        <item name="android:minHeight">10dp</item>
        <!-- <item name="android:maxHeight">15dp</item> -->
    </style>

    <style name="AppActionTheme" parent="com.aurora:style/Theme.aurora.Light">
        <item name="com.aurora:auroraActionBarTitleColor">@android:color/white</item>
        <item name="com.aurora:homeIcon">@com.aurora:drawable/aurora_action_bar_back_dark</item>
    </style>

    <style name="AppSearchTheme" parent="com.aurora:style/Theme.aurora.Light">
        <item name="com.aurora:auroraActionBarTitleColor">@android:color/white</item>
        <item name="com.aurora:homeIcon">@com.aurora:drawable/aurora_action_bar_back_dark</item>
        <item name="com.aurora:actionBarRightWidgetBackground">@android:color/transparent</item>
    </style>

    <style name="picture" parent="@android:style/Theme.Light">
        <item name="android:backgroundDimAmount">0.0</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorLink">@color/link</item>
        <item name="android:windowAnimationStyle">@style/anim.alpha</item>
    </style>

    <style name="anim.alpha" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>
    
    <style name="generalButton">
        <item name="android:background">@drawable/button_general_selector</item>
        <item name="android:textColor">@color/general_btn_text</item>
    </style>
    
    <style name="AppMarketTheme" parent="com.aurora:style/Theme.aurora.Light">
         <item name="com.aurora:auroraActionBarTitleColor">@color/white</item>
      <!--   <item name="com.aurora:homeIcon">@com.aurora:drawable/aurora_action_bar_back_translucent</item> -->
      <item name="com.aurora:auroraActionBarItemBackground">@color/white</item>
        <!-- <item name="com.aurora:actionBarLeftWidgetBackground">@drawable/aurora_actionbar_back_selector</item> -->
        <item name="com.aurora:actionBarRightWidgetBackground">@drawable/aurora_actionbar_right_selector</item>
        <item name="android:textCursorDrawable">@drawable/search_text_cursor</item>
    </style>
</resources>
