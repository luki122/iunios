<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@com.aurora:dimen/aurora_action_bar_search_view_height"
        android:background="@drawable/bg_main_tab" />
    
    <View
        android:layout_width="match_parent"
        android:background="@drawable/bg_main_tab"
        android:layout_height="@dimen/homepage_main_tab_height_max" />
    
    <com.aurora.market.widget.FrameBannerView
        android:id="@+id/banner_ad"
        android:layout_width="match_parent"
        android:layout_height="@dimen/homepgae_bannerview_height"
        android:gravity="center"
        android:scaleType="center" />

</LinearLayout>