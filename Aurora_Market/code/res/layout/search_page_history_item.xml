<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_page_list_item_height_47"
    android:gravity="center_vertical"
    >
    
    <ImageView android:id="@+id/history_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_time"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/search_page_margin_19"
        />

     <TextView android:id="@+id/history_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center_vertical"
         android:layout_centerVertical="true"
         android:singleLine="true"
         android:textSize="@dimen/textsize_16"
         android:layout_toRightOf="@id/history_img"
         android:textColor="@color/category_item_namecolor"
         android:layout_marginLeft="@dimen/search_page_margin_9"
         android:ellipsize="end"
         android:layout_marginRight="17dp"
         />
</RelativeLayout>