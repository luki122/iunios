<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector"
        android:clickable="true"
        android:paddingBottom="@dimen/category_item_padding_bottom" >

        <LinearLayout
            android:id="@+id/ll_top_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_category_left"
                android:layout_width="@dimen/category_item_img_width"
                android:layout_height="@dimen/category_item_img_width"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/page_appicon_small" />

            <TextView
                android:id="@+id/tv_category_name_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/app_detail_page_margin_15"
                android:text="@string/app_market_type_name"
                android:textColor="@color/category_item_namecolor"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <com.aurora.market.widget.GroupWordTextView
            android:id="@+id/tv_info_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top_left"
            android:lineSpacingExtra="@dimen/category_item_info_linespacingextra"
            android:text="@string/app_market_type_info"
            android:textColor="@color/category_item_descolor"
            android:textSize="@dimen/textsize_14" />
    </RelativeLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/line_grey" />

    <RelativeLayout
        android:id="@+id/item_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector"
        android:clickable="true"
        android:paddingBottom="@dimen/category_item_padding_bottom" >

        <LinearLayout
            android:id="@+id/ll_top_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_category_middle"
                android:layout_width="@dimen/category_item_img_width"
                android:layout_height="@dimen/category_item_img_width"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/page_appicon_small" />

            <TextView
                android:id="@+id/tv_category_name_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/app_detail_page_margin_15"
                android:text="@string/app_market_type_name"
                android:textColor="@color/category_item_namecolor"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <com.aurora.market.widget.GroupWordTextView
            android:id="@+id/tv_info_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top_middle"
            android:lineSpacingExtra="@dimen/category_item_info_linespacingextra"
            android:text="@string/app_market_type_info"
            android:textColor="@color/category_item_descolor"
            android:textSize="@dimen/textsize_14"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/line_grey" />

    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector"
        android:clickable="true"
        android:paddingBottom="@dimen/category_item_padding_bottom" >

        <LinearLayout
            android:id="@+id/ll_top_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_category_right"
                android:layout_width="@dimen/category_item_img_width"
                android:layout_height="@dimen/category_item_img_width"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/page_appicon_small" />

            <TextView
                android:id="@+id/tv_category_name_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/app_detail_page_margin_15"
                android:text="@string/app_market_type_name"
                android:textColor="@color/category_item_namecolor"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <com.aurora.market.widget.GroupWordTextView
            android:id="@+id/tv_info_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top_right"
            android:lineSpacingExtra="@dimen/category_item_info_linespacingextra"
            android:text="@string/app_market_type_info"
            android:textColor="@color/category_item_descolor"
            android:textSize="@dimen/textsize_14" />
    </RelativeLayout>

</LinearLayout>