<!--
     Check box that is displayed in the activity resolver UI for the user
     to make their selection the preferred activity.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="47dp"
    android:orientation="horizontal"
    android:paddingBottom="14dp"
    android:paddingLeft="33dp"
    android:paddingTop="15.8dp" >

    <com.aurora.iunivoice.widget.AuroraCheckBox
        android:id="@+id/aurora_select_dialog_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:textSize="15sp" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="marquee"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <com.aurora.iunivoice.widget.AuroraMultipleChoiceDialogEditText
            android:id="@android:id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:focusable="true"/>

        <Button
            android:id="@android:id/button1"
            android:layout_width="46dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:layout_marginRight="11dp"
            android:background="@drawable/aurora_dialog_mul_check_button"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:text="@string/aurora_save"
            android:focusable="false" />
    </RelativeLayout>
 
</LinearLayout>