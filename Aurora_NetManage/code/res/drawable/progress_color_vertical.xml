<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:id="@android:id/background">
		<shape>
			<corners android:radius="0dp" />
			<gradient android:startColor="#467cd8"
				android:centerColor="#467cd8" android:centerX="0.75"
				android:endColor="#467cd8" android:angle="270" />
		</shape>
	</item>

	<item android:id="@android:id/progress">
		<clip
		    android:clipOrientation="vertical"
            android:gravity = "bottom">
			<shape>
				<corners android:radius="0dp" />
				<gradient android:startColor="#86ca1a"
					android:centerColor="#86ca1a" android:centerX="0.75"
					android:endColor="#86ca1a" android:angle="270" />
			</shape>
		</clip>
	</item>

</layer-list>